<div id="fileInfo" >
    <div class="accordion"  id="infoList"data-bind="foreach: {data : modelsInformation}">
        <div class="accordion-group" >
            <div class="accordion-heading" >
                <div class="accordion-toggle" data-toggle="collapse" data-parent="#infoList" data-bind="attr:{href: href}, 
                                style:{ 'backgroundColor': isVisible() === true ? 'transparent' : 'rgba(250, 34, 86, 0.45)' }">
                    <span id="index" class="badge" data-bind="text:$index, click:click.bind($data), style:{ 'background-color': color}">
                        </span>
                    <span class="label label-info" data-bind="text:fileName"></span>
                </div>
            </div>
            <div  data-bind="attr:{id:$index}" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <span class="label label-inverse" data-bind="text: fileSize"></span>
                    <span class="label label-inverse" data-bind="text: faceCount"></span>
                    <span class="label label-inverse" data-bind="text: vertexCount"></span>
                </div>
            </div>
        </div>       
    </div>
</div>

<div class="menubox">		
	<ul id="ldd_menu" class="ldd_menu">
		<li id="access_menu">
			<span>Access</span>
			<div class="ldd_submenu">
				<ul id="access_ul" data-bind="foreach: access_menu">
					<li class="ldd_heading"><a data-bind="attr:{id:id}, text:text, click: function(e) { callback(); }, visible: itemVisible" href="#" ></a></li>
				</ul>				
			</div>
		</li>
		<li id="save_menu">
			<span>Save</span>
			<div class="ldd_submenu">
				<ul id="save_ul" data-bind="foreach: save_menu">
					<li class="ldd_heading"><a data-bind="attr:{id:id}, text:text, click: function(e) { callback(); }" ></a></li>
				</ul>
				
			</div>
		</li>
        <li id="view_menu">
			<span>View</span>
			<div class="ldd_submenu">
				<ul id="view_ul" data-bind="foreach: view_menu">
                    <li class="ldd_heading"><a data-bind="attr:{id:id}, text:text, click: function(e) { callback(); }" ></a></li>                   			
				</ul>
				
			</div>
		</li>
		
	</ul>

     <div class="logo">
        <img src="@Url.Content("~/Content/Images/logo.png")"  />
    </div>
</div>


