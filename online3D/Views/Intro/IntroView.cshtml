       <script src="@Url.Content("~/Scripts/knockout-2.1.0.min.js")" type="text/javascript"></script>

       <!-- CDN link and non local JS loading--> 
     
       <script data-main="scripts/intro" src="scripts/require-2.1.5.min.js"></script>
       
       
